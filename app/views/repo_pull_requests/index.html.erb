<% content_for(:title) do %>
  Listing Pull Requests
<% end %>

<table>
  <thead>
    <tr>
      <th>Repo</th>
      <th>Title</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pull_requests.each do |pull_request| %>
      <tr>
        <td><%= pull_request.repo.name %></td>
        <td><%= pull_request.title %></td>
        <td>#<%= pull_request.number %></td>
        <td><%= link_to 'Show', repo_pull_request_path(@repo, pull_request)%></td>
        <td><%= link_to 'Edit', edit_repo_pull_request_path(@repo, pull_request) %></td>
        <td><%= link_to 'Destroy', repo_pull_request_path(@repo, pull_request), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pull Request', new_repo_pull_request_path(@repo) %> |
<%= link_to 'Back', repo_path(@repo) %>
